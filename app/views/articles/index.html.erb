<H1 class="text-center mt-4">Listing all articles</H1>


    <% @articles.each do |article| %>
    <div class="row justify-content-md-center">
      <div class="col-6 mt-4">
        <div class="card text-center shadow mb-5 bg-body rounded">
          <div class="card-header fst-italic">
            By petitdieng
          </div>
          <div class="card-body">
            <h5 class="card-title"><%=link_to article.title, article_path(article), class: "text-success" %></h5>
            <p class="card-text"><%=truncate(article.description, length: 100)%></p>
            <%= link_to "show", article_path(article), class:"btn btn-outline-success"%> ||
            <%= link_to "edit", edit_article_path(article),class:"btn btn-outline-primary"%> ||
            <%= link_to "Delete", article_path(article),class:"btn btn-outline-danger", data: { "turbo-method": "delete", "turbo-confirm": "Are you sure you want to delete the article?" } %>
          </div>
          <div class="card-footer text-muted">
            <small>
              Created about <%=time_ago_in_words(article.created_at)%> | Updated about <%=time_ago_in_words(article.updated_at)%> 
            </small>
          </div>
        </div>
      </div>
    </div>
    <% end %>

  <%= link_to "Creer un article", "/articles/new" %>
  <br><%= link_to "Home page", root_path %>
